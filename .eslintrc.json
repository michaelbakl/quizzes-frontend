{
    "extends": ["stylelint-config-recommended", "stylelint-config-standard"],
    "rules": {
        "declaration-empty-line-before": [
            "always",
            {
                "ignore": ["after-declaration", "first-nested"]
            }
        ],
        "comment-whitespace-inside": "never",
        "selector-class-pattern": null
    }
}
